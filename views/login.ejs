        <form class="form">
            <div class="tela">

                <div class="topo">
                    <img src="">
                    <h1>Loge abaixo</h1>
                    <p>Bem vindo novamente</p>
                </div>

                <div class="inputs">
                    <label>Email </label>
                    <input type="text" placeholder="email"><br><br>
                    <label>Senha </label>
                    <input type="password" placeholder="senha">
                </div>

                <div class="check">
                    <label><input type="checkbox"> Quero ser lembado</label><br>
                </div>
                <button type="submit">Logar-se</button>
            </div>
        </form>
